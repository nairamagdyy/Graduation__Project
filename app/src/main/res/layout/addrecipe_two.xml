                        android:layout_height="82dp" />

                    <EditText android:id="@+id/tell_a_little_about_your_food"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="249dp"
                        android:layout_height="38.5dp"
                        android:hint="Tell a little about your food"
                        />

                </RelativeLayout>


            <Button
                android:id="@+id/track"
                android:layout_width="fill_parent"
                android:layout_height="38.5dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:text="Track"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/optional_ek1"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="297.73dp"
                    android:layout_marginTop="410dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="optional"
                    />


                <RelativeLayout android:id="@+id/layer_2"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="12.32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.32dp">


                    <RelativeLayout android:id="@+id/arrow_ios_back"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp">

                        <ImageView android:id="@+id/vector"
                            android:src="@drawable/vector"
                            android:contentDescription="vector"
                            android:alpha="0"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="24dp"
                            android:layout_height="24.64dp"
                            android:layout_marginLeft="1dp" />

                        <ImageButton android:id="@+id/vector_ek1"
                            android:src="@drawable/vector_ek1"
                            android:contentDescription="vector_ek1"
                            android:layout_marginStart="8dp"
