                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.48dp">

                            <ImageButton android:id="@+id/image_ek1"
                                android:src="@drawable/image_ek1"
                                android:contentDescription="image_ek1"
                                android:layout_width="54.76dp"
                                android:layout_height="53.33dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <TextView android:id="@+id/food_name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="295dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    />


                <RelativeLayout android:id="@+id/text_input___empty"
                    android:layout_marginTop="330dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp">


