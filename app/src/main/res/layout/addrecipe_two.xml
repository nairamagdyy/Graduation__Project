                            android:layout_width="7.19dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="8dp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout android:id="@+id/external_assets_apple_status_bar"
                    android:layout_marginTop="-22dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp">


                    <RelativeLayout android:id="@+id/battery"
                        android:layout_marginTop="17.33dp"
                        android:layout_marginStart="348.33dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="348.33dp">

                        <View android:id="@+id/border"
                            android:background="@drawable/border_shape"
                            android:alpha="0.35"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="24dp"
                            android:layout_height="13.33dp"
                            android:layout_marginLeft="0dp" />

                        <ImageView android:id="@+id/cap"
                            android:src="@drawable/cap"
                            android:contentDescription="cap"
                            android:alpha="0.40000000596046"
                            android:layout_marginStart="23dp"
                            android:layout_marginTop="4dp"
                            android:layout_width="1.33dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="23dp" />

                        <View android:id="@+id/capacity"
                            android:background="@drawable/capacity_shape"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_width="18dp"
                            android:layout_height="7.33dp"
                            android:layout_marginLeft="2dp" />

                    </RelativeLayout>

                    <ImageView android:id="@+id/wifi"
                        android:src="@drawable/wifi"
                        android:contentDescription="wifi"
                        android:layout_marginStart="328dp"
                        android:layout_marginTop="17.33dp"
                        android:layout_width="15.33dp"
                        android:layout_height="11dp"
                        android:layout_marginLeft="328dp" />

                    <ImageView android:id="@+id/cellular_connection"
                        android:src="@drawable/cellular_connection"
                        android:contentDescription="cellular_connection"
                        android:layout_marginStart="306dp"
                        android:layout_marginTop="17.67dp"
                        android:layout_width="17dp"
                        android:layout_height="10.67dp"
                        android:layout_marginLeft="306dp" />


                </RelativeLayout>


            </RelativeLayout>

