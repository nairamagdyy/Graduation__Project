    <LinearLayout android:id="@+id/upload_recipe_step_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <TextView android:id="@+id/_2_2"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_marginLeft="327dp"
                    android:layout_marginTop="34dp"
                    android:layout_width="44dp"
                    android:layout_height="38.5dp"
                    android:text="2/2"
                    />


                <RelativeLayout android:id="@+id/cover"
                    android:layout_marginTop="93dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp">

                    <View android:id="@+id/rectangle_188"
                        android:background="@drawable/rectangle_188_shape"
                        android:layout_width="331dp"
                        android:layout_height="165dp" />

                    <TextView android:id="@+id/add_cover_photo"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="97dp"
                        android:layout_width="162dp"
                        android:layout_height="38.5dp"
                        android:text="Add Cover Photo"
                        />

                    <TextView android:id="@+id/__up_to_12_mb_"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:layout_marginLeft="106dp"
                        android:layout_marginTop="130dp"
                        android:layout_width="130dp"
                        android:layout_height="38.5dp"
                        android:hint="(up to 12 Mb)"
                        />


                    <RelativeLayout android:id="@+id/iconly_bold_image"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="135dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp">


                        <RelativeLayout android:id="@+id/image"
                            android:layout_marginTop="5.33dp"
                            android:layout_marginStart="5.48dp"
