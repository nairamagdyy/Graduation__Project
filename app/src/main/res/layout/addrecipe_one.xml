<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <ScrollView android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
    <LinearLayout android:id="@+id/upload_recipe_step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="114dp"
                android:layout_height="38.5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="100dp"
                android:text="Ingredients "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />


                <LinearLayout android:id="@+id/linearLayout1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="315dp"
                    android:layout_centerHorizontal="true"
                    >
                    <Button android:id="@+id/ingredient"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:background="@null"
                        android:textSize="17sp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+Ingredient"
                        android:layout_centerHorizontal="true"
                        />
                </LinearLayout>


            <RelativeLayout android:id="@+id/text_input___empty_ek4"
                android:layout_marginTop="153dp"
                android:layout_marginStart="56dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_centerHorizontal="true">


                <RelativeLayout android:id="@+id/text_input___validation___empty_ek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <View android:id="@+id/rectangle_33_ek4"
                        android:background="@drawable/rectangle_33_ek4_shape"
                        android:layout_width="329dp"
                        android:layout_height="58dp"

                        />

                    <EditText android:id="@+id/enter_ingredient"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="21.65dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="156dp"
                        android:layout_height="38.5dp"
                        android:hint="Enter ingredient "
                        />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout android:id="@+id/text_input___empty_ek5"
                android:layout_marginTop="229dp"
                android:layout_marginStart="57dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_centerHorizontal="true">


                <RelativeLayout android:id="@+id/text_input___validation___empty_ek3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View android:id="@+id/rectangle_33_ek5"
                        android:background="@drawable/rectangle_33_ek5_shape"
                        android:layout_width="329dp"
                        android:layout_height="58dp"
                        />

                    <EditText android:id="@+id/enter_ingredient_ek1"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="21.65dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="156dp"
                        android:layout_height="38.5dp"
                        android:hint="Enter ingredient "
                        />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/_1_2"
                android:layout_width="41dp"
                android:layout_height="38.5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="329dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:gravity="center"
                android:text="1/2"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="75dp"
                android:layout_height="38.5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="34dp"
                android:text="Cancel"
                android:background="@null"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/steps"
                android:layout_width="65dp"
                android:layout_height="38.5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="406dp"
                android:text="Steps"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="406dp"
                android:hint="Optional"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:id="@+id/addstep"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="603dp">
                    <Button
                        android:id="@+id/step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="3dp"
                        android:background="@null"
                        android:gravity="center"
                        android:text="+Step"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"/>

            </LinearLayout>

            <RelativeLayout android:id="@+id/text_input___empty_ek6"
                android:layout_marginTop="450dp"
                android:layout_marginStart="56dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_centerHorizontal="true">


                <RelativeLayout android:id="@+id/text_input___validation___empty_ek4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:id="@+id/rectangle_33_ek6"
                        android:background="@drawable/rectangle_33_ek6_shape"
                        android:layout_width="329dp"
                        android:layout_height="58dp"
                        />

                    <EditText android:id="@+id/enter_step_1"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="21.65dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="118dp"
                        android:layout_height="38.5dp"
                        android:hint="Enter step 1 "
                        />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout android:id="@+id/text_input___empty_ek7"
                android:layout_marginTop="521dp"
                android:layout_marginStart="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_centerHorizontal="true">


                <RelativeLayout android:id="@+id/text_input___validation___empty_ek5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View android:id="@+id/rectangle_33_ek7"
                        android:background="@drawable/rectangle_33_ek7_shape"
                        android:layout_width="329dp"
                        android:layout_height="58dp"
                         />

                    <EditText android:id="@+id/enter_step_2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="21.65dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="120dp"
                        android:layout_height="38.5dp"
                        android:hint="Enter step 2"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/login_ek1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="690dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:text="Next"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>