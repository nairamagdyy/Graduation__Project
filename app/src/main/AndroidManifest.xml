<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="exportkit.xd" >

	<!--Camera Storage permission for image pick-->
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:theme="@style/AppTheme"
		android:label="@string/app_name"
        android:supportsRtl="true">
		<activity
			android:name=".View.coverpage_activity"
			android:label="gp"
			android:theme="@style/AppTheme" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="exportkit.xd.View.Register.log_in_activity"/>
		<activity android:name="exportkit.xd.View.Register.sign_up_activity"/>
		<activity android:name="exportkit.xd.View.Profile.myProfile_activity"/>
		<activity android:name="exportkit.xd.View.Profile.myFavorites_activity"/>
		<activity android:name="exportkit.xd.View.homepage_activity" />
		<activity android:name="exportkit.xd.View.Search.SearchUser_activity" />
		<activity android:name="exportkit.xd.View.Search.userprofile_Search" />
		<activity android:name="exportkit.xd.View.Profile.editProfileActivity"/>
		<activity android:name="exportkit.xd.View.Recipe.addRecipe_activity" />
		<activity android:name="exportkit.xd.View.macroTracker_activity" />
		<activity android:name="exportkit.xd.View.Recipe.recipeDetails_activity" />

		<!-- Image cropper activity -->
		<activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
			android:theme="@style/AppTheme"/>

	</application>

</manifest>
	
	